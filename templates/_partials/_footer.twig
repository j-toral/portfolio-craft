{% set nodes = craft.navigation.nodes()
  .handle(navigationVariables.navigationHandle)
  .all() %}

{% block footer %}

  <div class="bg-gray-200 text-black text-sm">
    <div class="flex flex-col items-center mx-auto px-4 xl:px-20 pb-4 pt-8">
      <div class="flex flex-col w-full gap-x-4 xl:gap-x-12 2xl:gap-x-24 lg:flex-row">
        <div class="mb-2.5 lg:w-1/3 lg:self-start relative">
          <p class="uppercase text-base mb-3 font-sans">{{ navigationVariables.newsletterHeading }}</p>
          <div class="pb-4">{{ navigationVariables.newsletterBody | retconAttr('*', { 'class': 'lg:text-xs xl:text-sm' }, false ) }}</div>
          <form id="ContactFooter" x-data x-validate @submit="$validate.submit" class="w-full relative z-0 flex flex-col">
            <div class="pb-3 w-full">
              <div class="relative z-0 w-full flex flex-col sm:flex-row before:pointer-events-none before:absolute before:top-0 before:right-0 before:bottom-0 before:left-0 before:-z-10 after:pointer-events-none after:absolute after:top-px after:right-px after:bottom-px after:left-px after:z-10">
                <input
                    id="NewsletterForm"
                    type="email"
                    class="peer/newsletter grow px-4 mb-4 sm:mb-0 placeholder:text-transparent appearance-none bg-transparent text-black h-11 min-h-[0.125rem] min-w-[0.625rem] text-left focus:outline-0 focus:ring-0 focus:border-black focus:pt-5 focus:pb-2 [&:not(:placeholder-shown)]:pt-5 [&:not(:placeholder-shown)]:pb-2"
                    autocapitalize="off"
                    autocomplete="email"
                    placeholder="{{ navigationVariables.emailPlaceholder }}"
                    required
                >
                <label class="absolute z-0 left-4 top-3 mb-0 pointer-events-none text-black/75 transition-all peer-focus/newsletter:text-xs peer-focus/newsletter:top-1.5 peer-focus/newsletter:left-4 peer-[&:not(:placeholder-shown)]/newsletter:text-xs peer-[&:not(:placeholder-shown)]/newsletter:top-1.5 peer-[&:not(:placeholder-shown)]/newsletter:left-4" for="NewsletterForm">
                  {{ navigationVariables.emailPlaceholder }}
                </label>
                <button
                    type="submit"
                    class="flex space-x-4 lg:space-x-2 xl:space-x-4 justify-center h-11 items-center text-gray-100 bg-black cursor-pointer overflow-hidden px-8 lg:px-4 xl:px-8"
                    name="commit"
                    id="Subscribe"
                >
                  <span>
                    {% include '_misc/emailSVG'with { 'classes': 'fill-none stroke-gray-100' } %}
                  </span>
                  <span class="uppercase">{{ navigationVariables.subscribeButton }}</span>
                </button>
                <span class="error-msg absolute top-0 left-0 w-full text-left text-red-500 translate-y-28 sm:translate-y-12">{{ navigationVariables.emailErrorMessage }}</span>
              </div>
            </div>
          </form>
          <div id="successDiv" class="pt-5 max-w-narrow w-full hidden">
            <h1 class="mb-2 uppercase">{{ navigationVariables.newsletterSuccessHeading }}</h1>
          </div>
        </div>

        {% import _self as macros %}

        {% set nodes = craft.navigation.nodes()
          .handle(navigationVariables.navigationHandle)
          .with(['children'])
          .level(1)
          .all() %}

        <div class="flex flex-col w-full mb-2.5 lg:-mt-4 lg:w-1/3">
          {% for node in nodes %}
            {{ macros.navigationNodes(node) }}
          {% endfor %}
        </div>

        {% macro navigationNodes(node) %}
          {% import _self as macros %}

        <div x-data="{ footerList_{{ node.id }}: false }">
          <div @click="footerList_{{ node.id }} = ! footerList_{{ node.id }}" class="flex items-center justify-between py-4 cursor-pointer select-none">
            <p class="text-sm uppercase font-sans">{{- node.title -}}</p>
            <span class="h-3.5 w-3.5 flex justify-center items-center">
              {% include '_misc/caretDownSVG' with { 'classes': '' } %}
            </span>
          </div>

          {% if node.hasDescendants %}
            <ul
                x-cloak
                x-show="footerList_{{ node.id }}"
                x-transition:enter="transition-all ease-out duration-200"
                x-transition:enter-start="opacity-0 -translate-y-10"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition-all ease-in duration-200"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 -translate-y-10"
            >
              {% for subnode in node.children %}
                <li>
                  <a
                      {% if subnode.url %}href="{{ subnode.url }}"{% endif %}
                      class="block text-sm py-1.5 transition-all cursor-pointer underline-offset-4 text-black/75 no-underline hover:underline hover:text-black"
                  >
                    {{- subnode.title -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}

        </div>

        {% endmacro %}

        <div class="grid w-full mb-2.5 lg:-mt-4 lg:w-1/3 lg:self-start">
          <div class="flex justify-center items-center lg:justify-start">
            <div class="p-4">
              <a href="tel:{{ navigationVariables.phoneNumber }}" class="flex space-x-2.5 justify-center items-center">
                <span class="h-3.5 w-3.5 flex justify-center items-center">
                    {% include '_misc/phoneSVG' with { 'classes': '' } %}
                </span>
                <span class="hidden ty:inline">
                    {{ navigationVariables.phoneNumber }}
                </span>
              </a>
            </div>
          </div>
          <div class="flex justify-center items-center lg:justify-start">
            <div class="p-4">
              <a href="mailto:{{ navigationVariables.email }}" class="flex space-x-2.5 justify-center items-center">
                <span class="h-5 w-5 flex justify-center items-center">
                    {% include '_misc/emailSVG' with { 'classes': '' } %}
                </span>
                <span class="hidden ty:inline">
                    {{ navigationVariables.email }}
                </span>
              </a>
            </div>
          </div>
          <div class="flex justify-center items-center lg:justify-start">
            <div class="p-4">
              {% include '_misc/socialIcons' with { 'table': navigationVariables.socialIcons, skip: 'false' } %}
            </div>
          </div>
        </div>
      </div>
      <div class="w-full border-t flex flex-col-reverse lg:flex-row justify-center items-center pt-4">
        <div id="footer-copyright" class="flex items-center">
          <small class="text-center">Â© 2023-{{ now | date('Y') }} {{ navigationVariables.copyright }}</small>
        </div>
      </div>
    </div>
  </div>

  {% if craft.geomate.country is empty %}
    {% set country = "United Kingdom" %}
  {% else %}
    {% set country = craft.geomate.country.country.names.en %}
  {% endif %}

{% endblock %}
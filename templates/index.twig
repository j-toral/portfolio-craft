{% set aspectSquareTransform = { height: 500 , width: 500 } %}
{% set aspectPortraitTransform = { height: 518 , width: 370 } %}

{% extends '_layouts/layout' %}

{% block main %}

  {% set blocks = craft.entries().section('sectionMetaInfo').enable(true).all() %}
  
  <main>
    {# Hero Block #}
    <div id="hero" class="relative">
      <div class="max-w-full text-center">
        <div class="relative sm:overflow-hidden">
          {# Block Background Image #}
          <div class="absolute inset-0 bg-black">
            {% set bgImage = entry.heroBackground.one() %}
            <img class="h-full w-full object-cover bg-blend-multiply" src="/images/{{ bgImage.url }}" alt="Alt Text">
          </div>
          {# Hero Content Block #}
          <div class="relative{% if entry.transparentPrimaryNav %} pb-16 pt-32 md:pb-32 md:pt-48{% else %} py-16 md:py-32{% endif %}">
            <div class="p-4">
              <h1 class="uppercase text-white">{{ entry.heroTitle }}</h1>
            </div>
            <div class="grid grid-cols-2 h-16 divide-x divide-white">
              <div class="block"></div><div class="block"></div>
            </div>
            {% if blocks|length %}
              <div class="flex pt-8 justify-center">
                {% for block in blocks|slice(0,3) %}
                  {% if block.heroLinkTitle %}
                    <a class="mx-2 md:mx-3 uppercase text-white decoration-white shrink-0 text-sm md:text-base" href="#{{ block.featuredSection }}">{{ block.heroLinkTitle }}</a>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

          </div>
        </div>
      </div>
    </div>
    {# END Hero Block #}

    {# Dynamic Featured Sections #}
    {% if blocks|length %}
      <div>
        {% for block in blocks %}
          {% set displayDelay = 100 %}
          <div id="{{ block.featuredSection }}" class="bg-gray-400 even:bg-gray-600 py-20">
            <div class="container mx-auto">
              {# Title & Intro #}
              <div class="text-center w-10/12 lg:w-8/12 mx-auto">
                <h2 class="uppercase mb-4">{{ block.heroTitle }}</h2>
                <div class="pb-20">{{ block.heroBody | retconAttr('p', { 'class': 'h3' }) }}</div>
              </div>

              {# Content Cards #}
              <div class="swiper swiper{{ block.id }} px-3.5 lg:px-0 overflow-hidden">
                {% set cards = craft.entries().section(block.featuredSection).limit(block.cardsDisplayed.value) %}
                {% if cards|length %}
                <div class="swiper-wrapper flex space-x-3.5 lg:space-x-7">
                {% endif %}
                  {% for card in cards %}
                    <div class="swiper-slide flex flex-col snap-center snap-always shrink-0 w-64 lg:shrink lg:w-auto {% if block.cardsDisplayed.value == 3 %}lg:basis-1/3{% elseif block.cardsDisplayed.value == 4%}lg:basis-1/4{% else %}lg:basis-1/5{% endif %}">
                      {% set previewCardImage = card.previewCardImage.one() %}
                      {# Single Card #}
                      <a href="{{ card.url }}" {% if block.cardsDisplayed.value == 3 %}class="relative overflow-hidden aspect-square w-full"{% endif %}>
                        {% if block.cardsDisplayed.value == 3 %}<div class="absolute inset-0">{% endif %}
                          <img src="{% if block.cardsDisplayed.value == 3 %}/images/{{ previewCardImage.getUrl() }}{% else %}/images/{{ previewCardImage.getUrl() }}{% endif %}" alt="" {% if block.cardsDisplayed.value == 3 %}class="h-full w-full object-cover"{% endif %}>
                          {% if block.cardsDisplayed.value == 3 %}</div>{% endif %}
                      </a>

                      <div class="flex-grow pt-6 pb-4">
                        <h4 class="uppercase mb-2">{{ card.title }}</h4>
                        <p>
                          {% if card.chapterTitle %}{{ card.chapterTitle }}{% endif %}
                          {% if card.previewCardExcerpt %}{{ card.previewCardExcerpt }}{% endif %}
                        </p>
                      </div>
                      <div>
                        <a href="{{ card.url }}" class="uppercase">Read More</a>
                      </div>
                    </div>
                  {% endfor %}
                  {# END Single Card #}
                </div>
              </div>

              {% if block.readMoreText and block.readMoreUrl %}
                <div class="text-center mt-20">
                  <a href="{{ block.readMoreUrl }}" class="btn btn-solid-dark">{{ block.readMoreText }}</a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    {# END Dynamic Featured Sections #}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

  <script>
    {% for block in blocks %}
      let swiper{{ block.id }} = new Swiper('.swiper{{ block.id }}', {
          slidesPerView: 'auto',
          threshold: 5,
          centeredSlides: true,
          centeredSlidesBounds: true,
          breakpoints: {
              1024: {
                  enabled: false,
              }
          }
      })
    {% endfor %}
  </script>
{% endblock %}